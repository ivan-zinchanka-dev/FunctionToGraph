<Window x:Class="FunctionToGraph.Views.GraphColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        xmlns:local="clr-namespace:FunctionToGraph.Views"
        mc:Ignorable="d"
        Title="GraphColorWindow" Height="410" Width="290">
    <StackPanel>
        <colorpicker:StandardColorPicker x:Name="main" />
        <colorpicker:PortableColorPicker ColorState="{Binding ElementName=main, Path=ColorState, Mode=TwoWay}"/>
    </StackPanel>
</Window>
